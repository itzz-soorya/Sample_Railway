<Window x:Class="UserModule.Components.BookingConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Completed"
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="30,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Background="#F7F7F7" 
            CornerRadius="15" 
            BorderBrush="#DDD" 
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#333" 
                    CornerRadius="15,15,0,0" 
                    Padding="25,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Viewbox Width="40" Height="40" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Path Fill="White" Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Booking Completed Successfully!" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="30,25">
                <StackPanel>
                    <!-- Main Message -->
                    <TextBlock x:Name="txtMainMessage"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#232323"
                               TextWrapping="Wrap"
                               LineHeight="28"
                               Margin="0,0,0,20"/>
                    
                    <!-- Details Card -->
                    <Border Background="White" 
                            CornerRadius="10" 
                            Padding="20"
                            BorderBrush="#DDD"
                            BorderThickness="1">
                        <TextBlock x:Name="txtDetails"
                                   FontSize="14"
                                   Foreground="#333"
                                   TextWrapping="Wrap"
                                   LineHeight="24"
                                   FontFamily="Consolas"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="0,0,15,15" 
                    Padding="25,20"
                    BorderBrush="#DDD"
                    BorderThickness="0,1,0,0">
                <Button x:Name="btnOk"
                        Content="OK"
                        Style="{StaticResource ModernButton}"
                        HorizontalAlignment="Center"
                        Click="btnOk_Click"
                        IsDefault="True"/>
            </Border>
        </Grid>
    </Border>
</Window>
