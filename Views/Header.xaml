<UserControl x:Class="UserModule.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F7F7F7"
             MinHeight="120"
             MinWidth="800">

    <UserControl.Resources>
        <!-- Header button style -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="35,8"/>
            <Setter Property="Margin" Value="20,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#222222"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderButtonSelectedStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
            <Setter Property="Background" Value="#555555"/>
        </Style>
    </UserControl.Resources>

    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="#232323" Height="70" VerticalAlignment="Top" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Navigation Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <!-- Logo with rounded corners -->
                    <!-- <Border CornerRadius="8" 
                            Width="50" 
                            Height="50" 
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            ClipToBounds="True">
                        <Image Source="/assests/Logo.png" 
                               Stretch="UniformToFill"
                               Width="50"
                               Height="50"/>
                    </Border> -->

                    <Button x:Name="DashboardButton" Style="{StaticResource HeaderButtonStyle}" MinWidth="120" Click="Dashboard_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Views/Dashboard.png" Width="25" Height="25" Margin="0,0,6,0"/>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" FontSize="15"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NewBookingButton" Style="{StaticResource HeaderButtonStyle}" MinWidth="140" Click="NewBooking_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Views/NewBooking.png" Width="24" Height="24" Margin="0,0,8,0" Stretch="Fill"/>
                            <TextBlock Text="New Booking" VerticalAlignment="Center" FontSize="15"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="ScanHeaderButton" Style="{StaticResource HeaderButtonStyle}" MinWidth="120" Click="HeaderScanButton_Click">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Assets/Images/Scan.png" Width="30" Height="30" Margin="0,0,6,0"/>
                            <TextBlock Text="Close Booking" VerticalAlignment="Center" FontSize="15"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="SubmitBookingButton" Content="Submit Booking" Style="{StaticResource HeaderButtonStyle}" MinWidth="150" Click="Submit_Click" Background="#555555" Visibility="Collapsed"  />
                </StackPanel>

                <!-- Action Buttons - Right Aligned -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <!-- Internet Status Indicator (moved from Dashboard) -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0" ToolTip="Internet Connection Status">
                        <Ellipse x:Name="InternetStatusDot" 
                                 Width="12" Height="12" 
                                 Fill="Gray"
                                 Stroke="White"
                                 StrokeThickness="1"/>
                        <TextBlock x:Name="InternetStatusText" 
                                   Text="Checking..." 
                                   Foreground="White" 
                                   FontSize="11" 
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Image Source="/Assets/Images/usericon.png" Width="32" Height="32"/>
                    <TextBlock x:Name="UserNameTextBlock"
                               Text="USER NAME"
                               FontSize="12"
                               FontFamily="Segoe UI Symbol"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="10,0"/>
                    <Button x:Name="LogoutButton" Width="28" Height="28" Background="Transparent" BorderThickness="0" Cursor="Hand" Click="LogoutButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="4" Background="{TemplateBinding Background}">
                                    <Image Source="/Assets/Images/logout.png" Width="20" Height="20"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#333333"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#222222"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

      


        <!-- Main Content Area -->
        <Border Background="White" Grid.Row="1" Margin="20" CornerRadius="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid x:Name="MainContentGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ContentControl x:Name="MainContentHost" Margin="0,-10,0,10"/>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Background="#F7F7F7" Height="50" Grid.Row="2" Padding="20,0" VerticalAlignment="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Footer Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="©Copyrights@artech. All rights are reserved" 
                       Foreground="#787878" FontSize="12" Margin="0,0,10,0"/>
                    <TextBlock Text="Version: 1.3.1" 
                       Foreground="#787878" FontSize="12"/>
                </StackPanel>

                <!-- Center Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button Content="Private policy" Foreground="#787878" Background="Transparent" BorderThickness="0" 
                    FontSize="12" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Terms of use" Foreground="#787878" Background="Transparent" BorderThickness="0" 
                    FontSize="12" Cursor="Hand"/>
                </StackPanel>

                <!-- Right Footer -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="Powered by" Foreground="#787878" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="AR Technologies" Foreground="#444444" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</UserControl>
