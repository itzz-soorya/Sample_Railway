<UserControl x:Class="UserModule.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:UserModule"
             mc:Ignorable="d"
             Background="#F7F7F7"
             HorizontalAlignment="Stretch" 
             VerticalAlignment="Stretch"
             MinHeight="600" 
             MinWidth="800">
    <UserControl.Resources>
        <local:BookingTypeConverter x:Key="BookingTypeConverter"/>
        <!-- Booking ID Converter -->
        <local:BookingIdConverter x:Key="BookingIdConverter"/>
        <!-- Header Button Style -->
        <Style TargetType="Button" x:Key="HeaderButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded TextBox with Watermark Style -->
        <Style TargetType="TextBox" x:Key="RoundedWatermarkTextBoxStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#E0E7ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style TargetType="RadioButton" x:Key="ToggleButtonStyle">
            <Setter Property="BorderBrush" Value="#E0E7ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                        CornerRadius="6"
                        Padding="12,8"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Hover effect only -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="FloralWhite"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Button Style for Scan and Add Booking -->
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Header Style -->
        <Style TargetType="DataGridColumnHeader" x:Key="DataGridHeaderStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4F5E80"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Main Grid with proper row definitions for responsive layout -->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section (Fixed) -->
        <Grid Grid.Row="0" Margin="20,20,20,10" HorizontalAlignment="Stretch">
            <!-- Greeting Box -->
            <Border Background="#232323" CornerRadius="8" Padding="20"
                    VerticalAlignment="Top" HorizontalAlignment="Stretch" MinHeight="80">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Logo with rounded corners -->
                    <Border Grid.Column="0" 
                            CornerRadius="8" 
                            Width="60" 
                            Height="60" 
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            ClipToBounds="True">
                        <Image Source="/assests/Logo.png" 
                               Stretch="UniformToFill"
                               Width="60"
                               Height="60"/>
                    </Border>

                    <StackPanel Grid.Column="1">
                        <TextBlock x:Name="GreetingTextBlock"
                                   Text="Good morning, User"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextTrimming="CharacterEllipsis"/>
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Image Width="16" Height="16" Margin="0,0,8,0" Source="/Assets/Images/calendar.png"/>
                            <TextBlock x:Name="DateTextBlock" Foreground="White" FontSize="14" Margin="0,0,0,2" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Action Buttons - Right Aligned -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <!-- Refresh Button -->
                        <Button x:Name="RefreshButton" 
                                Width="40" 
                                Height="40" 
                                Background="White" 
                                BorderThickness="0" 
                                Margin="0,0,12,0" 
                                Cursor="Hand"
                                Click="RefreshButton_Click"
                                ToolTip="Sync with server">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border" 
                                                        Background="{TemplateBinding Background}" 
                                                        CornerRadius="6">
                                                    <TextBlock Text="🔄" 
                                                               FontSize="20" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Totals (read-only) -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0">
                            <TextBox x:Name="TotalBookingsTextBox"
                                     Text="Total Bookings: 0"
                                     IsReadOnly="True"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="8"
                                     FontSize="13"
                                     Width="180"
                                     Margin="0,0,0,6"/>

                            <TextBox x:Name="TotalAmountTextBox"
                                     Text="Total Amount: ₹0.00"
                                     IsReadOnly="True"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Padding="8"
                                     FontSize="13"
                                     Width="180"/>
                        </StackPanel>

                     </StackPanel>
                 </Grid>
             </Border>
         </Grid>

        <!-- Data Section (Scrollable) -->
        <Grid Grid.Row="1" Margin="20,10,20,20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Data Card -->
            <Border Background="White" CornerRadius="10" Padding="20"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search & Filters Row (Fixed) -->
                    <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" MinWidth="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*" MinWidth="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Bar -->
                        <Border Grid.Column="0"
                                Background="White"
                                CornerRadius="8"
                                BorderBrush="#CCC"
                                BorderThickness="1"
                                MinHeight="36"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,10,0">
                            <Grid>
                                <TextBox x:Name="SearchTextBox"
                                         VerticalContentAlignment="Center"
                                         Padding="36,0,12,0"
                                         FontSize="14"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Text="" TextChanged="SearchTextBox_TextChanged"/>
                                <Image Source="/Assets/Images/Search.png"
                                       Width="16"
                                       Height="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="12,0,0,0"
                                       IsHitTestVisible="False"/>
                            </Grid>
                        </Border>

                        <!-- Filter Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Center">
                            <Button x:Name="btnAllFilter" Content="All" 
                                    Width="70" Height="32" 
                                    Background="#232323" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Margin="0,0,6,0"
                                    Cursor="Hand"
                                    Click="FilterAll_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnActiveFilter" Content="Active" 
                                    Width="70" Height="32" 
                                    Background="#E0E0E0" 
                                    Foreground="#333333"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Margin="0,0,6,0"
                                    Cursor="Hand"
                                    Click="FilterActive_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnCompletedFilter" Content="Completed" 
                                    Width="90" Height="32" 
                                    Background="#E0E0E0" 
                                    Foreground="#333333"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="FilterCompleted_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                                            Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="8,4">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <!-- Status and Type Counts -->
                        <StackPanel x:Name="CountsPanel" Grid.Column="2" Orientation="Horizontal" Margin="10,0,10,0" VerticalAlignment="Center">
                            <!-- Active Count -->
                            <Border Background="#E8F5E9" Padding="6,4" CornerRadius="16" Margin="0,0,6,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="✓" Foreground="#4CAF50" FontWeight="Bold" FontSize="12" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="ActiveTextBlock" Text="Active: 0" Foreground="#4CAF50" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                            <!-- Completed Count -->
                            <Border Background="#FFF3E0" Padding="6,4" CornerRadius="16" Margin="0,0,6,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="✓" Foreground="#FF9800" FontWeight="Bold" FontSize="12" Margin="0,0,4,0"/>
                                    <TextBlock x:Name="CompletedTextBlock" Text="Completed: 0" Foreground="#FF9800" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid with Scrolling Enabled -->
                    <Border Grid.Row="1" BorderBrush="#E0E7ED" BorderThickness="1" CornerRadius="8" Background="#FAFBFF">
                        <DataGrid x:Name="BookingDataGrid" 
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserReorderColumns="False"
                                HeadersVisibility="Column"
                                IsReadOnly="True"
                                SelectionMode="Extended"
                                RowHeight="50"
                                ColumnHeaderHeight="40"
                                GridLinesVisibility="None"
                                BorderThickness="0"
                                Background="Transparent"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                ScrollViewer.CanContentScroll="True"
                                ItemsSource="{Binding Bookings}">

                            <DataGrid.Resources>
                                <!-- Cell Style -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="8,4"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Row Style -->
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    <Setter Property="BorderBrush" Value="#F0F0F0"/>
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#E6F3FF"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>

                                <!-- Column Header Style -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                    <Setter Property="BorderBrush" Value="#4A90E2"/>
                                    <Setter Property="Background" Value="#F0F3FF"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Foreground" Value="#333"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGrid.Resources>

                            <!-- Responsive Columns -->
                            <DataGrid.Columns>
                                <!-- Booking Id -->
                                <DataGridTemplateColumn Width="1.2*" MinWidth="120" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/Booking.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Booking Id" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding booking_id, Converter={StaticResource BookingIdConverter}}" 
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center" 
                                                       TextWrapping="Wrap"
                                                       ToolTip="{Binding booking_id}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Name -->
                                <DataGridTemplateColumn Width="1.5*" MinWidth="150" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/Person.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Name" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding guest_name}" FontSize="13"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Phone No -->
                                <DataGridTemplateColumn Width="1.2*" MinWidth="120" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/Phone.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Phone No" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding phone_number}" FontSize="13"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Seat Type -->
                                <DataGridTemplateColumn Width="1*" MinWidth="100" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/Group.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Seat Type" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock FontSize="13"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"
                                                       TextWrapping="Wrap">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource BookingTypeConverter}">
                                                        <Binding Path="booking_type"/>
                                                        <Binding Path="room_number"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Start Time -->
                                <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/clock.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Start Time" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding in_time, StringFormat=hh\\:mm}" FontSize="13"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- End Time -->
                                <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/clock.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="End Time" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding out_time, StringFormat=hh\\:mm}" FontSize="13"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Status -->
                                <DataGridTemplateColumn Width="1*" MinWidth="80" IsReadOnly="True">
                                    <DataGridTemplateColumn.Header>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/assests/Vector.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                            <TextBlock Text="Status" FontSize="14" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border>
                                                <TextBlock Text="{Binding status}" FontSize="12"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           TextAlignment="Center"
                                                           Foreground="#333333"
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Container for dynamic content - Overlays everything -->
                    <Grid x:Name="ContentGrid" 
                          Grid.Row="0"
                          Grid.RowSpan="2"
                          Background="#F0F0F0"
                          Visibility="Collapsed"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Panel.ZIndex="100"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>