<UserControl x:Class="UserModule.Report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserModule"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="White">
    <UserControl.Resources>
        <local:TextToVisibilityConverter x:Key="TextToVisibilityConverter"/>
        <local:Last4DigitsConverter x:Key="Last4DigitsConverter"/>
        <local:BalanceConverter x:Key="BalanceConverter"/>
        <local:PaymentDisplayConverter x:Key="PaymentDisplayConverter"/>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="30,20,30,30">
                
                <!-- Page Title -->
                <TextBlock Text="Reports &amp; Analytics" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="#232323"
                           Margin="0,0,0,20"/>

                <!-- Date Filter Section -->
                <Border Background="#F8F9FA" 
                        BorderBrush="#E0E7ED" 
                        BorderThickness="1" 
                        CornerRadius="10" 
                        Padding="25"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Date Pickers -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Border Background="White" 
                                    BorderBrush="#D1D5DB" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="12,0"
                                    Margin="0,0,15,0"
                                    Height="42">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“…" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="From Date" FontSize="10" Foreground="#6B7280" FontWeight="Medium"/>
                                        <DatePicker x:Name="FromDatePicker" 
                                                   BorderThickness="0"
                                                   Background="Transparent"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#232323"
                                                   Margin="0,2,0,0">
                                            <DatePicker.Resources>
                                                <Style TargetType="DatePickerTextBox">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Foreground" Value="#232323"/>
                                                </Style>
                                            </DatePicker.Resources>
                                        </DatePicker>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="White" 
                                    BorderBrush="#D1D5DB" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="12,0"
                                    Margin="0,0,15,0"
                                    Height="42">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“…" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="To Date" FontSize="10" Foreground="#6B7280" FontWeight="Medium"/>
                                        <DatePicker x:Name="ToDatePicker" 
                                                   BorderThickness="0"
                                                   Background="Transparent"
                                                   FontSize="13"
                                                   FontWeight="SemiBold"
                                                   Foreground="#232323"
                                                   Margin="0,2,0,0">
                                            <DatePicker.Resources>
                                                <Style TargetType="DatePickerTextBox">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Foreground" Value="#232323"/>
                                                </Style>
                                            </DatePicker.Resources>
                                        </DatePicker>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <Button Content="Apply Filter" 
                                    x:Name="ApplyFilterButton"
                                    Click="ApplyFilter_Click"
                                    Width="130" 
                                    Height="42" 
                                    Background="#4A90E2" 
                                    Foreground="White" 
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="8"
                                                            Padding="20,10">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#357ABD"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <!-- Right: Quick Filters -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="Today" x:Name="btnToday" Click="QuickFilter_Today" Width="85" Height="35" Margin="5,0,0,0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" FontSize="13" FontWeight="Medium" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            Padding="12,8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Last 7 Days" x:Name="btnLast7" Click="QuickFilter_Last7Days" Width="100" Height="35" Margin="5,0,0,0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" FontSize="13" FontWeight="Medium" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            Padding="12,8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Last 30 Days" x:Name="btnLast30" Click="QuickFilter_Last30Days" Width="110" Height="35" Margin="5,0,0,0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" FontSize="13" FontWeight="Medium" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            Padding="12,8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="This Month" x:Name="btnThisMonth" Click="QuickFilter_ThisMonth" Width="105" Height="35" Margin="5,0,0,0" Background="White" BorderBrush="#D1D5DB" BorderThickness="1" Foreground="#374151" FontSize="13" FontWeight="Medium" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6"
                                                            Padding="12,8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Summary Cards -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Bookings Card -->
                    <Border Grid.Column="0" 
                            Background="#F8F9FA" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Total Bookings" FontSize="14" Foreground="#666" Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtTotalBookings" Text="0" FontSize="32" FontWeight="Bold" Foreground="#232323"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Revenue Card -->
                    <Border Grid.Column="1" 
                            Background="#F8F9FA" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Total Revenue" FontSize="14" Foreground="#666" Margin="0,0,0,8"/>
                            <TextBlock x:Name="txtTotalRevenue" Text="â‚¹0" FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Booking Type Breakdown -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sitting Bookings -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Sitting Bookings" FontSize="18" FontWeight="SemiBold" Foreground="#232323" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Count" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtSittingCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#232323"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Revenue" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtSittingRevenue" Text="â‚¹0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Sleeper Bookings -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Sleeper Bookings" FontSize="18" FontWeight="SemiBold" Foreground="#232323" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Count" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtSleeperCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#232323"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Revenue" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtSleeperRevenue" Text="â‚¹0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Status Breakdown -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Active Bookings -->
                    <Border Grid.Column="0" 
                            Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20"
                            Margin="0,0,10,0">
                        <StackPanel>
                            <TextBlock Text="Active Bookings" FontSize="18" FontWeight="SemiBold" Foreground="#232323" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Count" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtActiveCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Amount" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtActiveAmount" Text="â‚¹0" FontSize="24" FontWeight="Bold" Foreground="#2196F3"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Completed Bookings -->
                    <Border Grid.Column="1" 
                            Background="White" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Completed Bookings" FontSize="18" FontWeight="SemiBold" Foreground="#232323" Margin="0,0,0,15"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Count" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtCompletedCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Amount" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtCompletedAmount" Text="â‚¹0" FontSize="24" FontWeight="Bold" Foreground="#4CAF50"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Payment Method Breakdown -->
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ’° " FontSize="24" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Payments" FontSize="18" FontWeight="SemiBold" Foreground="#232323" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Total Count -->
                            <StackPanel Grid.Column="0" Margin="0,0,30,0">
                                <TextBlock Text="Count" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtPaymentCount" Text="0" FontSize="28" FontWeight="Bold" Foreground="#232323"/>
                            </StackPanel>
                            
                            <!-- Separator 1 -->
                            <Border Grid.Column="1" Width="2" Background="#E0E0E0" Margin="15,0"/>
                            
                            <!-- Cash Amount -->
                            <StackPanel Grid.Column="2" Margin="30,0,30,0">
                                <TextBlock Text="ðŸ’µ Cash" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtCashAmount" Text="â‚¹0" FontSize="28" FontWeight="Bold" Foreground="#FF9800"/>
                            </StackPanel>
                            
                            <!-- Separator 2 -->
                            <Border Grid.Column="3" Width="2" Background="#E0E0E0" Margin="15,0"/>
                            
                            <!-- Online Amount -->
                            <StackPanel Grid.Column="4" Margin="30,0,0,0">
                                <TextBlock Text="ðŸ’³ Online" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                <TextBlock x:Name="txtOnlineAmount" Text="â‚¹0" FontSize="28" FontWeight="Bold" Foreground="#9C27B0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Export Options -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Button Content="ðŸ–¨ï¸ Print Report" 
                            x:Name="btnPrintReport"
                            Click="PrintReport_Click"
                            Width="140" 
                            Height="40" 
                            Margin="0,0,10,0"
                            Background="#4CAF50" 
                            Foreground="White" 
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="15,10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#45A049"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="ðŸ“Š Export to Excel" 
                            x:Name="btnExportExcel"
                            Click="ExportExcel_Click"
                            Width="150" 
                            Height="40"
                            Background="#2196F3" 
                            Foreground="White" 
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="6"
                                                    Padding="15,10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Search Box -->
                <Border Background="White" 
                        BorderBrush="#E0E7ED" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ðŸ”" 
                                   FontSize="18" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   Foreground="#6B7280"/>
                        
                        <TextBox x:Name="txtSearch"
                                 Grid.Column="1"
                                 TextChanged="Search_TextChanged"
                                 FontSize="14"
                                 Padding="8"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 Foreground="#232323">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}">
                                                    <Grid>
                                                        <TextBlock Text="Search by Booking ID, Name, or Phone Number..."
                                                                   FontSize="14"
                                                                   Foreground="#9CA3AF"
                                                                   VerticalAlignment="Center"
                                                                   Padding="8,0,0,0"
                                                                   Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource TextToVisibilityConverter}}"/>
                                                        <ScrollViewer x:Name="PART_ContentHost" 
                                                                     Margin="0" 
                                                                     VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Detailed Booking Table -->
                <Border Background="#FAFBFF" 
                        BorderBrush="#E0E7ED" 
                        BorderThickness="1" 
                        CornerRadius="8">
                    <DataGrid x:Name="ReportDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserReorderColumns="False"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              SelectionMode="Extended"
                              RowHeight="50"
                              ColumnHeaderHeight="40"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              Background="Transparent"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.PanningMode="Both"
                              MinHeight="400">

                        <DataGrid.Resources>
                            <!-- Cell Style -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- Row Style -->
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#F0F0F0"/>
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E6F3FF"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <!-- Column Header Style -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                                <Setter Property="BorderBrush" Value="#4A90E2"/>
                                <Setter Property="Background" Value="#F0F3FF"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="Padding" Value="8"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <!-- Booking ID (Last 4 digits) -->
                            <DataGridTemplateColumn Width="0.8*" MinWidth="80" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Booking.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="ID" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#4A90E2"
                                                   ToolTip="{Binding booking_id}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}#{0}">
                                                    <Binding Path="booking_id" Converter="{StaticResource Last4DigitsConverter}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Date -->
                            <DataGridTemplateColumn Width="1*" MinWidth="100" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Time.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Date" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding booking_date, StringFormat=dd-MM-yyyy}" FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Name -->
                            <DataGridTemplateColumn Width="1.5*" MinWidth="150" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Person.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Name" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding guest_name}" FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Phone No -->
                            <DataGridTemplateColumn Width="1.2*" MinWidth="120" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Phone.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Phone No" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding phone_number}" FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Seat Type -->
                            <DataGridTemplateColumn Width="1*" MinWidth="100" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Group.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Type" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding booking_type}" FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- In Time -->
                            <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/clock.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="In Time" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding in_time, StringFormat=hh\\:mm}" FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Out Time -->
                            <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/clock.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Out Time" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding out_time, StringFormat=hh\\:mm}" FontSize="13"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Status -->
                            <DataGridTemplateColumn Width="0.8*" MinWidth="80" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Vector.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Status" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding status}" FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#333333"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Total Amount -->
                            <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ’°" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Total" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding total_amount, StringFormat=â‚¹{0:N0}}" FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#4CAF50"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Advance -->
                            <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ’µ" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Advance" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#2196F3">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource PaymentDisplayConverter}">
                                                    <Binding Path="paid_amount"/>
                                                    <Binding Path="payment_method"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Extra/Balance -->
                            <DataGridTemplateColumn Width="1*" MinWidth="90" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ’³" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Balance" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FF9800">
                                            <TextBlock.Text>
                                                <MultiBinding Converter="{StaticResource BalanceConverter}" StringFormat="â‚¹{0:N0}">
                                                    <Binding Path="total_amount"/>
                                                    <Binding Path="paid_amount"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Booking Staff -->
                            <DataGridTemplateColumn Width="1.2*" MinWidth="110" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="ðŸ‘¤" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Booked By" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding booked_by}" FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Foreground="#666"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Closing Staff -->
                            <DataGridTemplateColumn Width="1.2*" MinWidth="110" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="âœ“" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="Closed By" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding closed_by}" FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   Foreground="#666"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Action Button -->
                            <DataGridTemplateColumn Width="1*" MinWidth="110" IsReadOnly="True">
                                <DataGridTemplateColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Image Source="/assests/Vector.png" Width="16" Height="16" Margin="0,0,5,0"/>
                                        <TextBlock Text="Action" FontSize="14" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Reprint" 
                                                Background="#4A90E2" 
                                                Foreground="White" 
                                                BorderThickness="0"
                                                Padding="12,6"
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Cursor="Hand"
                                                HorizontalAlignment="Center"
                                                Click="ReprintButton_Click"
                                                Tag="{Binding}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                        CornerRadius="4"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                                    VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#357ABD"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter Property="Background" Value="#2A5F8F"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Pagination Controls -->
                <Border Background="White" 
                        BorderBrush="#E0E7ED" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,10,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Record Info (Left) -->
                        <TextBlock x:Name="txtRecordInfo" 
                                   Grid.Column="0"
                                   Text="Showing 1 - 20 of 100 records" 
                                   FontSize="13" 
                                   Foreground="#666"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>

                        <!-- Navigation Buttons (Center) -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="btnPreviousPage" 
                                    Content="&lt; Previous" 
                                    Click="PreviousPage_Click"
                                    Width="100" 
                                    Height="35" 
                                    Margin="0,0,10,0"
                                    Background="#4A90E2" 
                                    Foreground="White" 
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="15,8">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#357ABD"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Page Info -->
                            <Border Background="#F0F3FF" 
                                    BorderBrush="#4A90E2" 
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="20,8"
                                    Margin="0,0,10,0">
                                <TextBlock x:Name="txtPageInfo" 
                                           Text="Page 1 of 5" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="#4A90E2"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <Button x:Name="btnNextPage" 
                                    Content="Next &gt;" 
                                    Click="NextPage_Click"
                                    Width="100" 
                                    Height="35"
                                    Background="#4A90E2" 
                                    Foreground="White" 
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6"
                                                            Padding="15,8">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#357ABD"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Background" Value="#CCCCCC"/>
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        <!-- Empty space (Right) -->
                        <TextBlock Grid.Column="2"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
