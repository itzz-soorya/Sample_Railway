<UserControl x:Class="UserModule.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UserModule.Components"
             MinWidth="600" MinHeight="600"
             Background="#F7F7F7"
             Loaded="UserControl_Loaded"
             KeyDown="Login_KeyDown">

    <UserControl.Resources>
        <!-- Modern TextBox Style -->
         <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E7ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,0,8,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E7ED"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,0,8,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    

    <!-- Main ScrollViewer for entire Login form -->
    <ScrollViewer x:Name="LoginScrollViewer"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalFirst"
                  CanContentScroll="False"
                  IsDeferredScrollingEnabled="False">

        <Grid x:Name="RootGrid" Margin="0,0,0,50">
        

        <!-- ✅ Column definitions must be at the top -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL -->
        <Border Grid.Column="0" Background="#EEF1FF" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Welcome Text -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150">
                    <TextBlock Text="Welcome back!" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Height="44"/>
                    <TextBlock Text="Login to start Work" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Bottom Policy Section -->
                <Grid Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Grid Margin="10" Height="150">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <Button Content="Private Policy"
                                    Foreground="#787878" FontSize="12" FontWeight="Bold"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Margin="0,0,20,0"/>
                            <Button Content="Terms of Use"
                                    Foreground="#787878" FontSize="12" FontWeight="Bold"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"
                                    Margin="0,0,20,0"/>
                        </StackPanel>

                        <!-- Right Section -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1">
                            <Image Width="14" Height="14"/>
                            <Button Content="AR Technologies"
                                    Foreground="#787878" FontSize="12" FontWeight="Bold"
                                    Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <!-- RIGHT PANEL -->
        <Grid Grid.Column="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="29*"/>
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,55,0,0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="13*"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="CardBorder"
                        Padding="30"
                        CornerRadius="10"
                        Background="White"
                        MinWidth="400"
                        MinHeight="450" Grid.ColumnSpan="2">
                    <StackPanel>

                        <!-- Header -->
                        <TextBlock Text="Login Page"
                                   Foreground="#444444"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Login"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,10,0,10"/>
                        <TextBlock Text="Sign in to your account to continue"
                                   FontSize="14"
                                   Foreground="Gray"
                                   Margin="0,5,0,30"/>

                        <!-- Username -->
                        <TextBlock Text="User Name"
                                   FontSize="14"
                                   Foreground="#333333"
                                   FontWeight="Medium"
                                   FontFamily="Inter"
                                   Margin="2,0,0,10"/>
                        <Grid Margin="0,0,0,20">
                            <TextBox x:Name="txtUsername"
                                Style="{StaticResource ModernTextBox}"
                                KeyDown="TxtUsername_KeyDown" />

                            <TextBlock x:Name="usernamePlaceholder"
                                       Text="Enter Username"
                                       Foreground="#aaa"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                        </Grid>

                        <!-- Password -->
                        <TextBlock Text="Password"
                                   FontSize="14"
                                   Foreground="#333333"
                                   FontWeight="Medium"
                                   FontFamily="Inter"
                                   Margin="2,0,0,10"/>
                        <Grid Margin="0,0,0,20">
                            <PasswordBox x:Name="txtPassword" Style="{StaticResource ModernPasswordBox}" />
                            <TextBox x:Name="txtPasswordVisible" Style="{StaticResource ModernTextBox}" Visibility="Collapsed"/>
                            <TextBlock x:Name="pwdPlaceholder"
                                       Text="Enter password"
                                       Foreground="#aaa"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>
                            <Image Width="20" Height="20"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,0"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="ShowPassword_Click"
                                   MouseLeftButtonUp="HidePassword_Click"
                                   Source="/Assets/Images/Frame.png"/>
                        </Grid>

                        <!-- Login Button -->
                        <Button x:Name="btnLogin"
                                Content="Log In"
                                Height="44"
                                Background="#000"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="Login_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#000000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Height" Value="44"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#444444"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- ✅ Loader Overlay (kept last for top layer visibility) -->
        <Grid x:Name="LoaderOverlay"
            Grid.ColumnSpan="2"
            Background="#80000000"
            Visibility="Collapsed"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Panel.ZIndex="999">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Width="200" Height="10" IsIndeterminate="True"/>
                <TextBlock Text="Loading..." Foreground="White" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>


    </Grid>
    </ScrollViewer>
</UserControl>
