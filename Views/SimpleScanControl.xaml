<UserControl x:Class="UserModule.SimpleScanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  CanContentScroll="True">
        <Border Background="White" CornerRadius="10" BorderBrush="#DDD" BorderThickness="2" Padding="30" Margin="0,0,0,50">
            <Grid>
            <!-- Scan Section -->
            <StackPanel x:Name="ScanSection">
                <TextBlock Text="Complete Billing - Scan Booking ID" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#232323" Margin="0,0,0,20"/>
                
                <Border Background="#F0F8FF" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Scan or Enter Booking ID:" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="txtTest" 
                                 FontSize="18" 
                                 Height="50" 
                                 Padding="10" 
                                 HorizontalContentAlignment="Center"
                                 BorderBrush="#999" 
                                 BorderThickness="2"
                                 PreviewKeyDown="txtTest_PreviewKeyDown"/>
                        <TextBlock Text="Focus on the field above and scan or press Enter" 
                                   FontSize="12" 
                                   Foreground="#666" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <Button Content="Close" Width="150" Height="40" Click="CloseButton_Click"
                        Background="#BDBCBC" Foreground="White" FontSize="16" FontWeight="SemiBold" 
                        BorderThickness="0" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Payment Section (Hidden initially) -->
            <StackPanel x:Name="PaymentSection" Visibility="Collapsed">
                <TextBlock Text="Complete Payment" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#232323" Margin="0,0,0,20"/>
                
                <!-- Customer Info -->
                <Border Background="#F7F7F7" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock x:Name="lblCustomerName" Text="Customer Name" FontSize="18" FontWeight="Bold"/>
                        <TextBlock x:Name="lblCustomerPhone" Text="Phone: " FontSize="13" Foreground="#666" Margin="0,5,0,0"/>
                        <TextBlock x:Name="lblSeatType" Text="Seat Type" FontSize="13" Foreground="#666" Margin="0,3,0,0"/>
                        <TextBlock x:Name="lblInTimeDisplay" Text="In Time: " FontSize="13" Foreground="#666" Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Billing Details -->
                <Border Background="#FFF9E6" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° Billing Summary" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Original Amount:" FontSize="14" Margin="0,5"/>
                            <TextBlock x:Name="lblOriginalAmount" Grid.Row="0" Grid.Column="1" Text="â‚¹0" FontSize="14" FontWeight="SemiBold" Margin="10,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Extra Charges:" FontSize="14" Margin="0,5" Foreground="#FF6B6B"/>
                            <TextBlock x:Name="lblExtraCharges" Grid.Row="1" Grid.Column="1" Text="â‚¹0" FontSize="14" FontWeight="SemiBold" Margin="10,5" Foreground="#FF6B6B"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Amount:" FontSize="15" FontWeight="Bold" Margin="0,5"/>
                            <TextBlock x:Name="lblTotalAmount" Grid.Row="2" Grid.Column="1" Text="â‚¹0" FontSize="15" FontWeight="Bold" Margin="10,5" Foreground="#2ECC71"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Paid Amount:" FontSize="14" Margin="0,5"/>
                            <TextBlock x:Name="lblPaidAmount" Grid.Row="3" Grid.Column="1" Text="â‚¹0" FontSize="14" FontWeight="SemiBold" Margin="10,5"/>

                            <Rectangle Grid.Row="4" Grid.ColumnSpan="2" Height="1" Fill="#DDD" Margin="0,10"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Out Time and Balance -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="â° Out Time" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtOutTime" FontSize="16" Height="40" Padding="10" 
                                 HorizontalContentAlignment="Center" BorderBrush="#999" BorderThickness="1"
                                 IsReadOnly="True" Background="#F5F5F5" Cursor="Arrow"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="ðŸ’µ Balance to Pay" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtBalanceAmount" FontSize="16" Height="40" Padding="10" 
                                 HorizontalContentAlignment="Center" BorderBrush="#999" BorderThickness="1"
                                 IsReadOnly="True" Background="#FFF9E6" Cursor="Arrow" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- Payment Method -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="ðŸ’³ Payment Method" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
                    <ComboBox x:Name="cmbPaymentMethod" Height="45" Padding="10" FontSize="15" 
                              SelectionChanged="cmbPaymentMethod_SelectionChanged">
                        <ComboBoxItem Content="Select Payment Method" IsSelected="True" IsEnabled="False"/>
                        <ComboBoxItem Content="Cash"/>
                        <ComboBoxItem Content="Card"/>
                        <ComboBoxItem Content="UPI"/>
                        <ComboBoxItem Content="Net Banking"/>
                        <ComboBoxItem Content="Others"/>
                    </ComboBox>
                    <TextBlock x:Name="errPaymentMethod" Text="* Please select a payment method" 
                               Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="5,5,0,0"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnCompletePayment" Content="Complete Payment" Width="180" Height="45" 
                            Background="#28A745" Foreground="White" FontSize="16" FontWeight="Bold" 
                            BorderThickness="0" Margin="0,0,10,0" Click="btnCompletePayment_Click" 
                            IsEnabled="False" Cursor="Hand"/>
                    <Button Content="Cancel" Width="120" Height="45" Click="CloseButton_Click"
                            Background="#BDBCBC" Foreground="White" FontSize="16" FontWeight="SemiBold" 
                            BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
    </ScrollViewer>
</UserControl>