<UserControl x:Class="UserModule.Billing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="320" Height="520">

    <!-- Main ScrollViewer for entire Billing control -->
    <ScrollViewer x:Name="BillingScrollViewer"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalFirst"
                  CanContentScroll="False"
                  IsDeferredScrollingEnabled="False">
        
        <Grid x:Name="RootGrid" Margin="0,0,0,30">
            <!-- Billing Content -->
            <Border x:Name="BillingContent"
                    BorderBrush="#DDD" BorderThickness="1"
                    CornerRadius="10" Padding="20"
                    Background="White">
                <StackPanel>
                    <TextBlock Text="Erode Railway" FontSize="18" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <!-- Customer Info -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock x:Name="CustomerNameText" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock x:Name="BillIdText" FontSize="12" Foreground="#666"/>
                        <TextBlock x:Name="PhoneTextBox" Visibility="Hidden" FontSize="12" Foreground="#666"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock x:Name="SeatTypeText" FontSize="12" Foreground="#666"/>
                            <TextBlock Text=" • " FontSize="12" Foreground="#666" Margin="5,0"/>
                            <TextBlock x:Name="TimeText" FontSize="12" Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>

                    <Separator Margin="0,5,0,5"/>

                    <!-- Billing Details -->
                    <Grid Margin="0,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total Hours" Grid.Column="0"/>
                        <TextBlock x:Name="TotalHoursText" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Persons" Grid.Column="0"/>
                        <TextBlock x:Name="PersonsText" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Rate per Person" Grid.Column="0"/>
                        <TextBlock x:Name="RateText" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total Amount" Grid.Column="0"/>
                        <TextBlock x:Name="AmountText" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Paid Amount" Grid.Column="0"/>
                        <TextBlock x:Name="PaidAmountText" Grid.Column="1"/>
                    </Grid>

                    <Grid Margin="0,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Balance" Grid.Column="0"/>
                        <TextBlock x:Name="BalanceText" Grid.Column="1"/>
                    </Grid>

                    <!-- Barcode -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,20,0,10">
                        <Image x:Name="BillingBarcode" Width="160" Height="50" Stretch="Fill"/>
                        <TextBlock Text="Scan to close the bill" FontSize="12" Foreground="#666" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="PrintButton" Content="Print" Width="100" Height="30" Background="#232323" Foreground="White" 
            FontWeight="SemiBold" BorderThickness="0" Click="PrintButton_Click" Margin="0,0,10,0" Focusable="True"/>
                        <Button Content="Cancel" Width="100" Height="30" Background="White" Foreground="#232323"
            FontWeight="SemiBold" BorderThickness="1" BorderBrush="#232323" Click="CancelButton_Click" Focusable="True"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Inline Success Popup -->
            <Grid x:Name="SuccessPopup" Background="#80000000" Visibility="Collapsed">
                <Border Width="250" Height="150" Background="White" CornerRadius="10"
                        HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Booking Added " 
                               FontSize="18" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="The booking has been Added successfully!" 
                               FontSize="14" Foreground="Gray" 
                               HorizontalAlignment="Center" TextAlignment="Center" 
                               Margin="0,0,0,20"/>
                        <Button x:Name="OkButton" Content="Ok" Width="100" Height="30" Background="#232323" Foreground="White"
                         FontWeight="SemiBold" BorderThickness="0"
                         Click="SuccessClose_Click" Focusable="True"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
