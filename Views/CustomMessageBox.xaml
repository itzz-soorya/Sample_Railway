<Window x:Class="UserModule.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Details"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        SizeToContent="WidthAndHeight">

    <Border CornerRadius="16"
            BorderBrush="#FFD700"
            BorderThickness="2"
            Background="#FFFFFF"
            Padding="0"
            Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              ShadowDepth="3"
                              Opacity="0.5"
                              Color="Black" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#1E1E1E"
                    CornerRadius="14,14,0,0"
                    Padding="20,0">
                <Grid>
                    <TextBlock Text="Booking Details"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis" />
                    <Button Content="✕"
                            Width="30"
                            Height="30"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            Click="CloseButton_Click" />
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          Margin="30,20"
                          VerticalScrollBarVisibility="Auto"
                          MaxHeight="350">
                <TextBlock x:Name="DetailsTextBlock"
                           TextWrapping="Wrap"
                           FontSize="15"
                           Foreground="#2C2C2C"
                           LineHeight="24"
                           TextTrimming="None"
                           Padding="5" />
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="#FAFAFA"
                    CornerRadius="0,0,14,14"
                    Padding="15,20">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">

                    <!-- Rounded Yellow Button -->
                    <Button x:Name="AddButton"
                            Content="Add to Network"
                            Width="150"
                            Height="40"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Click="AddButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#FFD700"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Rounded Dark Button -->
                    <Button Content="Close"
                            Width="110"
                            Height="40"
                            FontWeight="Bold"
                            FontSize="14"
                            Cursor="Hand"
                            Click="CloseButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#333333"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      TextBlock.Foreground="White" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
