<UserControl x:Class="UserModule.Submit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="#F7F7F7">

    <UserControl.Resources>
        <!-- Style for rounded TextBox with visible border -->
        <Style x:Key="RoundedWatermarkTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#999999"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="Bd"
                                CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock x:Name="Watermark"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="#888"
                                           Margin="14,0,0,0"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"
                                           Opacity="0.6"
                                           Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Main ScrollViewer for entire Submit form -->
    <ScrollViewer x:Name="SubmitScrollViewer"
                  VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalFirst"
                  CanContentScroll="False"
                  IsDeferredScrollingEnabled="False">

        <Grid x:Name="SubmitGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,0,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#F7F7F7" Margin="0,10,0,20" VerticalAlignment="Top">
                <Border Background="#232323" CornerRadius="8" Padding="20" Margin="24,10,20,10" VerticalAlignment="Top">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Submit Booking"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="White"/>
                        <TextBlock Text="Completed the requirements to end the booking"
                       FontSize="13"
                       Foreground="#F7F7F7"
                       Margin="0,6,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            <!-- Scrollable Form Content -->

            <!-- FORM -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="30" Margin="20,0,20,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="200"/>
                        <ColumnDefinition Width="*" MinWidth="200"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 1 -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Booking ID" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtBookingId" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Enter booking ID" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Guest Name" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtGuestName" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Enter full name" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Row 2 -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Phone Number" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPhoneNumber" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="+91 0000000000" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Number of Persons" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNumberOfPersons" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Enter number" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Row 3 -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Booking Type" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtSeatType"
                 Style="{StaticResource RoundedWatermarkTextBoxStyle}"
                 Foreground="#999999"
                 Tag="Seat type"
                 Height="40"
                 IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="15,0,0,20">
                        <TextBlock Text="Total Hours" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                        <!-- Total Hours -->
                        <TextBox x:Name="txtTotalHours" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Total Hours" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Row 4 - Booking Date & Time -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,15,0,20">
                        <TextBlock Text="Booking Date &amp; Time" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Date -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Date" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                                <TextBox x:Name="txtBookingDate" 
                                                 Style="{StaticResource RoundedWatermarkTextBoxStyle}" 
                                                 Foreground="#999999" 
                                                 Height="40"
                                                 IsReadOnly="True"/>
                            </StackPanel>

                            <!-- In-Time -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="In-Time" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                                <TextBox x:Name="txtInTime" 
                                                 Style="{StaticResource RoundedWatermarkTextBoxStyle}" 
                                                 Foreground="#999999" 
                                                 Height="40"
                                                 IsReadOnly="True"/>
                            </StackPanel>

                            <!-- Out-Time -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Out-Time" FontSize="13" Foreground="#999" Margin="0,0,0,4"/>
                                <TextBox x:Name="txtOutTime" 
                                                 Style="{StaticResource RoundedWatermarkTextBoxStyle}" 
                                                 Foreground="#999999" 
                                                 Height="40"
                                                 IsReadOnly="True"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>


                    <!-- Proof Info -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,15,20">
                        <TextBlock Text="Proof Information" FontWeight="SemiBold" FontSize="14" Foreground="#333" Margin="0,0,0,8"/>
                        <TextBlock Text="Id Type" FontWeight="SemiBold" FontSize="14" Foreground="#222222" Margin="0,6,0,8"/>
                        <TextBox x:Name="txtIdType" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Id Type" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="15,26,0,20">
                        <TextBlock Text="Id number" FontWeight="SemiBold" FontSize="14" Foreground="#222222" Margin="0,6,0,8"/>
                        <TextBox x:Name="txtIdNumber" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Id Number" Height="40" IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Pricing Info -->
                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Margin="0,0,0,20">
                        <TextBlock Text="Pricing Information" FontWeight="SemiBold" FontSize="14" Foreground="#222" Margin="0,0,0,14"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Price per Person (₹)" FontSize="13" FontWeight="SemiBold" Foreground="#222222" Margin="0,0,0,8"/>
                                <!-- Price per Person -->
                                <TextBox x:Name="txtPricePerPerson" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="0" Height="40" IsReadOnly="True"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                <TextBlock Text="Advance Amount (₹)" FontSize="13" FontWeight="SemiBold" Foreground="#222222" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtAdvanceAmount" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="Advance Amount" Height="40" IsReadOnly="True"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                                <TextBlock Text="Balance Amount(₹)" FontSize="13" FontWeight="SemiBold" Foreground="#222222" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtBalanceAmount" Style="{StaticResource RoundedWatermarkTextBoxStyle}" Tag="₹00.00" Height="40" IsReadOnly="True"/>

                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <TextBox x:Name="txtStatus" Visibility="Collapsed"/>


                    <!-- Submit / Cancel -->
                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Click="PaymentButton_Click" Content="Submit" Width="249" Height="40" Background="#232323" Foreground="#ffffff" FontSize="16" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand"  />

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
